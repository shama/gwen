@import 'nib'

$color = #333

.loading-bar
  width: 100%
  height: .1em
  position: fixed
  top: 0
  left: 0
  opacity: 1
  transition-duration(350ms)
  pointer-events(none)
  .loading-bar-percent
    background-color: $color
    height: .1em

.loading-bar.is-start,
.loading-bar.is-end
  opacity: 0

.loading-bar-spinner
  display: block
  position: fixed
  z-index: 100
  top: .8em
  left: .8em
  .spinner-icon
    width: 1em
    height: 1em
    border: solid 2px transparent
    border-top-color: $color
    border-left-color: $color
    border-radius: 1em
    animation(loading-bar-spinner 400ms linear infinite)

@keyframes loading-bar-spinner
  0%
    transform(rotate(0deg))
  100%
    transform(rotate(360deg))
